<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/grey"
        android:padding="5dp"
        android:id="@+id/itemLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile4"
            android:id="@+id/userImage"
            android:layout_gravity="center"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Petrecia Wanger"
                android:fontFamily="@font/sunflowermedium"
                android:textSize="14sp"
                android:textColor="#000"
                android:id="@+id/userName"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gift reserved for hurry up and buy it"
                android:fontFamily="@font/sunflowermedium"
                android:textSize="12sp"
                android:maxLines="2"
                android:id="@+id/giftText"
                />

        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:id="@+id/giftLayout">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/post4"
                android:scaleType="fitXY"
                android:id="@+id/giftImage"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="@string/buy"
                    android:id="@+id/buy"
                    android:background="@drawable/btn_followed"
                    android:textColor="@color/white"/>

                <Button
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:id="@+id/cancel"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:background="@drawable/btn_followed"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>