<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alpha.whizwish">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.GenieActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AlertActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.AddNew"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Camera.CameraActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Camera.VideoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Camera.PicturePreview"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Camera.VideoPreview"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.FollowersActivity"
            android:label="@string/title_activity_followers"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.WhatsOnActivity"
            android:label="@string/title_activity_whats_on"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.ProfileActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/GOOGLE_API_KEY" />

        <activity
            android:name=".Activities.StoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.AllStoresActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Camera.CameraTest" />
        <activity android:name=".Activities.TimeLineActivity" />
        <activity android:name=".Activities.GiftsActivity" />
        <activity android:name=".Activities.AudioRecorderActivity" />
        <activity android:name=".Activities.AudioPreview"></activity>
    </application>

</manifest>